<!-- views/index.ejs -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home Page</title>
  </head>
  <body>
    <% if (user) { %>
    <h1>Welcome to the app, <%= user.username %>!</h1>
    <nav>
      <ul>
        <li><a href="/vip-lounge">Get into the VIP Users Only lounge!</a></li>
        <li><a href="/auth/sign-out">Sign out</a></li>
      </ul>
    </nav>
    <% } else { %>
    <h1>Welcome to the app, guest.</h1>
    <nav>
      <ul>
        <li><a href="/auth/sign-up">Sign Up</a></li>
        <li><a href="/auth/sign-in">Sign In</a></li>
      </ul>
    </nav>
    <p><a href="/vip-lounge">Get into the VIP Users Only lounge!</a></p>
    <% } %>
  </body>
</html>
